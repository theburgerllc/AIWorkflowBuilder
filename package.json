{
  "name": "ai-workflow-builder",
  "version": "1.0.0",
  "description": "AI-powered workflow automation builder for Monday.com using Claude AI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:oauth": "node scripts/test-oauth.js",
    "test:production": "NODE_ENV=production npm run test",
    "ngrok": "ngrok http 8080",
    "build": "npm run build:client && npm run build:server",
    "build:client": "echo 'Client build complete'",
    "build:server": "echo 'Server build complete'",
    "deploy": "npm run build && node scripts/deploy.js",
    "health": "curl http://localhost:8080/health",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "npm run lint && npm run test:coverage"
  },
  "keywords": [
    "monday.com",
    "ai",
    "automation",
    "claude",
    "workflow"
  ],
  "author": "The Burger LLC",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@mondaycom/apps-sdk": "^3.2.1",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "monday-sdk-js": "^0.4.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
